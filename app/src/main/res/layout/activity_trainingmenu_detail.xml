<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trainingmenu_detail_menu_name"
            android:id="@+id/trainingMenuNameLabel"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:id="@+id/trainingMenuName"
            android:layout_below="@+id/trainingMenuNameLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trainingmenu_detail_menu"
            android:id="@+id/exercises"
            android:layout_below="@+id/trainingMenuName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/label_chest"/>

        <CheckBox
            android:id="@+id/barbell_bench_press"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/barbell_bench_press"/>

        <CheckBox
            android:id="@+id/incline_bench_press"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/incline_bench_press"/>

        <CheckBox
            android:id="@+id/decline_bench_press"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/decline_bench_press"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/trainingmenu_detail_save"
            android:id="@+id/saveExercise" />
    </LinearLayout>
</ScrollView>

